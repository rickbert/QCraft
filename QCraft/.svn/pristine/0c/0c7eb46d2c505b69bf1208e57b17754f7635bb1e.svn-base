package economy;

import java.util.HashMap;

import org.bukkit.Bukkit;
import org.bukkit.entity.Player;

public class Money {
	private Player player;
	private int balance;
	private static HashMap<String, Money> players = new HashMap<String, Money>();

	public Money(Player player, int balance) {
		this.player = player;
		this.balance = balance;
		players.put(player.getName(), this);
	}

	public int balance() {
		return balance;
	}

	public void checkBalance() {
		player.sendMessage("You have $" + balance);
	}

	public boolean deposit(int amount) {
		if (amount > 0) {
			balance = balance + amount;
			return true;
		}
		return false;
	}

	public boolean withdraw(int amount) {
		if (balance - amount >= 0) {
			balance = balance - amount;
			return true;
		}
		return false;
	}
	
	@Override
	public String toString() {
		return "Balance: " + balance;
	}
	
	public static Money getMoney(String player) {
		if (players.containsKey(player)) {
			return players.get(player);
		}
		return new Money(Bukkit.getPlayer(player), 0);
	}
	
	public static void removeMoney(String player) {
		if (players.containsKey(player)) {
			players.remove(player);
		}
	}
}
